        function startScanner(elementId, mode) {
            if(html5QrCode) stopScanner();
            html5QrCode = new Html5Qrcode(elementId);
            html5QrCode.start({ facingMode: "environment" }, { fps: 10, qrbox: { width: 200, height: 200 } }, (decodedText) => {
                if(mode === 'attendance') processAttendance(decodedText);
                else if (mode === 'payment') {
                    document.getElementById('paySearchID').value = decodedText;
                    searchStudentForPay();
                    stopScanner();
                }
            }).catch(() => notify('Ø®Ø·Ø£', 'ØªØ¹Ø°Ø± ÙØªØ­ Ø§Ù„ÙƒØ§Ù…ÙŠØ±Ø§', 'error'));
        }

        function stopScanner() {
            if (html5QrCode) {
                html5QrCode.stop().then(() => { html5QrCode.clear(); html5QrCode = null; }).catch(() => {});
            }
        }

        function manualAttendance() {
            const id = document.getElementById('manualAttID').value;
            if(id.length !== 4) return notify('Ø®Ø·Ø£', 'Ø§Ù„ÙƒÙˆØ¯ ÙŠØ¬Ø¨ Ø£Ù† ÙŠÙƒÙˆÙ† 4 Ø£Ø±Ù‚Ø§Ù…', 'warning');
            processAttendance(id);
            document.getElementById('manualAttID').value = '';
            document.getElementById('manualAttID').focus();
        }

        function processAttendance(id) {
            const student = students.find(s => s.id === id);
            const statusDiv = document.getElementById('attendanceStatus');
            const msg = document.getElementById('statusMsg');
            const icon = document.getElementById('statusIcon');
            const time = document.getElementById('statusTime');

            statusDiv.classList.remove('hidden');
            
            if (student) {
                if (!attendance[today]) attendance[today] = [];
                if (!attendance[today].includes(student.id)) {
                    attendance[today].push(student.id);
                    saveData();
                    statusDiv.className = "mt-6 transform transition-all duration-300 border-l-4 border-green-500 bg-green-50 rounded-xl p-4";
                    msg.innerHTML = `<span class="text-green-700">Ø£Ù‡Ù„Ø§Ù‹ ${student.name}</span>`;
                    icon.innerHTML = 'âœ…';
                    playBeep(true);
                } else {
                    statusDiv.className = "mt-6 transform transition-all duration-300 border-l-4 border-yellow-500 bg-yellow-50 rounded-xl p-4";
                    msg.innerHTML = `<span class="text-yellow-700">Ù…Ø³Ø¬Ù„ Ù…Ø³Ø¨Ù‚Ø§Ù‹</span>`;
                    icon.innerHTML = 'âš ï¸';
                    playBeep(false);
                }
            } else {
                statusDiv.className = "mt-6 transform transition-all duration-300 border-l-4 border-red-500 bg-red-50 rounded-xl p-4";
                msg.innerHTML = `<span class="text-red-700">ÙƒÙˆØ¯ ØºÙŠØ± ØµØ­ÙŠØ­</span>`;
                icon.innerHTML = 'âŒ';
                playBeep(false);
            }
            time.innerText = new Date().toLocaleTimeString('ar-EG');
            updateAttendanceCounters();
        }

        function updateAttendanceCounters() {
            const present = attendance[today] ? attendance[today].length : 0;
            document.getElementById('presentCount').innerText = present;
            document.getElementById('absentCount').innerText = students.length - present;
        }

        // --- 3. Accounting ---
        let currentPayStudent = null;

        function togglePayMethod(method) {
            stopScanner();
            document.getElementById('paymentForm').classList.add('hidden');
