        function searchStudentForPay() {
            const id = document.getElementById('paySearchID').value;
            const student = students.find(s => s.id === id);
            if(student) {
                currentPayStudent = student;
                document.getElementById('paymentForm').classList.remove('hidden');
                document.getElementById('payStdName').innerText = student.name;
                document.getElementById('payStdID').innerText = student.id;
                playBeep(true);
            } else {
                notify('Ø®Ø·Ø£', 'Ø§Ù„Ø·Ø§Ù„Ø¨ ØºÙŠØ± Ù…ÙˆØ¬ÙˆØ¯', 'error');
                document.getElementById('paymentForm').classList.add('hidden');
            }
        }

        function confirmPayment() {
            if(!currentPayStudent) return;
            const amount = parseFloat(document.getElementById('payAmount').value);
            const type = document.getElementById('payType').value;
            
            accounting.revenues.push({ date: today, studentId: currentPayStudent.id, studentName: currentPayStudent.name, amount, type });
            saveData();
            updateFinanceSummary();
            document.getElementById('paymentForm').classList.add('hidden');
            document.getElementById('paySearchID').value = '';
            notify('ØªÙ… Ø§Ù„Ø¯ÙØ¹', 'ØªÙ… ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¹Ù…Ù„ÙŠØ© Ø¨Ù†Ø¬Ø§Ø­', 'success');
        }

        function addExpense() {
            const type = document.getElementById('expType').value;
            const note = document.getElementById('expNote').value;
            const amount = parseFloat(document.getElementById('expAmount').value);

            if(!type || !amount) return notify('ØªÙ†Ø¨ÙŠÙ‡', 'ÙŠØ±Ø¬Ù‰ Ø§Ø®ØªÙŠØ§Ø± Ù†ÙˆØ¹ Ø§Ù„Ù…ØµØ±ÙˆÙ ÙˆØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ù…Ø¨Ù„Øº', 'warning');

            // Ø¯Ù…Ø¬ Ø§Ù„Ù†ÙˆØ¹ Ù…Ø¹ Ø§Ù„Ù…Ù„Ø§Ø­Ø¸Ø© ÙÙŠ Ø§Ù„ÙˆØµÙ
            const desc = note ? `${type} - ${note}` : type;

            accounting.expenses.push({ date: today, desc: desc, amount: amount });
            saveData();
            updateFinanceSummary();
            
            // ØªÙØ±ÙŠØº Ø§Ù„Ø­Ù‚ÙˆÙ„
            document.getElementById('expType').value = '';
            document.getElementById('expNote').value = '';
            document.getElementById('expAmount').value = '';
            notify('ØªÙ…', 'ØªÙ… ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ù…ØµØ±ÙˆÙ Ø¨Ù†Ø¬Ø§Ø­', 'success');
        }

        function updateFinanceSummary() {
            const totalRev = accounting.revenues.reduce((sum, r) => sum + r.amount, 0);
            const totalExp = accounting.expenses.reduce((sum, e) => sum + e.amount, 0);
            document.getElementById('totalRev').innerText = totalRev;
            document.getElementById('totalExp').innerText = totalExp;
            document.getElementById('netProfit').innerText = (totalRev - totalExp);
        }

        // --- Utilities ---
        function saveData() {
            localStorage.setItem('center_students_v3', JSON.stringify(students));
            localStorage.setItem('center_attendance_v3', JSON.stringify(attendance));
            localStorage.setItem('center_accounting_v3', JSON.stringify(accounting));
        }

        function deleteStudent(id) {
            if(confirm('Ø­Ø°Ù Ø§Ù„Ø·Ø§Ù„Ø¨ Ù†Ù‡Ø§Ø¦ÙŠØ§Ù‹ØŸ')) {
                students = students.filter(s => s.id !== id);
                saveData();
                renderStudents();
            }
        }

        function generateAttendanceReport() {
            const presentIds = attendance[today] || [];
            const absents = students.filter(s => !presentIds.includes(s.id));
            let html = `
                <div class="grid grid-cols-2 gap-2 mb-4">
                    <div class="bg-green-100 p-2 rounded text-center text-green-800 font-bold">Ø­Ø¶ÙˆØ±: ${presentIds.length}</div>
                    <div class="bg-red-100 p-2 rounded text-center text-red-800 font-bold">ØºÙŠØ§Ø¨: ${absents.length}</div>
                </div>
            `;
            if(absents.length > 0) {
                html += `<h3 class="font-bold text-sm mb-2 text-gray-600">Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„ØºÙŠØ§Ø¨:</h3>`;
                absents.forEach(s => {
                    html += `<div class="flex justify-between bg-gray-50 p-2 rounded mb-1 border-r-4 border-red-400">
                        <span>${s.name}</span>
                        <span class="font-mono text-gray-500">${s.id}</span>
                    </div>`;
                });
            } else {
                html += `<p class="text-center text-green-600">Ø§Ù„Ø¬Ù…ÙŠØ¹ Ø­Ø§Ø¶Ø±ÙˆÙ†! ğŸ‘</p>`;
            }
            document.getElementById('reportArea').innerHTML = html;
            showTab('reports');
        }

        function notify(title, body, type) {
            const modal = document.getElementById('customModal');
            const icon = document.getElementById('modalIcon');
            modal.classList.remove('hidden');
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalBody').innerText = body;
            icon.innerHTML = type === 'success' ? 'ğŸ‰' : (type === 'error' ? 'ğŸš«' : 'âš ï¸');
        }

        function closeModal() { document.getElementById('customModal').classList.add('hidden'); }

        function playBeep(success) {
            const ctx = new (window.AudioContext || window.webkitAudioContext)();
            const osc = ctx.createOscillator();
            osc.type = 'sine';
            osc.frequency.setValueAtTime(success ? 1000 : 300, ctx.currentTime);
            osc.connect(ctx.destination);
            osc.start();
            osc.stop(ctx.currentTime + 0.1);
        }
    </script>
