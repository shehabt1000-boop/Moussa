    <script>
        // --- Data & Init ---
        let students = JSON.parse(localStorage.getItem('center_students_v3')) || [];
        let attendance = JSON.parse(localStorage.getItem('center_attendance_v3')) || {};
        let accounting = JSON.parse(localStorage.getItem('center_accounting_v3')) || { revenues: [], expenses: [] };
        const today = new Date().toISOString().split('T')[0];

        window.onload = () => {
            renderStudents();
            updateFinanceSummary();
            updateAttendanceCounters();
            
            // Enter Key Listeners
            document.getElementById('manualAttID').addEventListener('keypress', (e) => { if(e.key === 'Enter') manualAttendance(); });
            document.getElementById('paySearchID').addEventListener('keypress', (e) => { if(e.key === 'Enter') searchStudentForPay(); });
        };

        // --- Navigation ---
        function showTab(tabId, btnElement) {
            stopScanner();
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            
            // Update Nav Buttons
            document.querySelectorAll('.nav-item').forEach(el => {
                el.classList.remove('active', 'bg-white', 'text-blue-900');
                el.classList.add('text-blue-100');
            });
            if(btnElement) {
                btnElement.classList.add('active');
                btnElement.classList.remove('text-blue-100');
            }
        }

        // --- 1. Students ---
        function generateUniqueID() {
            let id;
            do {
                id = Math.floor(1000 + Math.random() * 9000).toString();
            } while (students.some(s => s.id === id));
            return id;
        }

        function registerStudent() {
            const name = document.getElementById('stdName').value;
